{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "types",
  },
  "include": ["**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "scripts",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
